                    { text: "Mostly authentic, minor compromises", score: 4 },
                    { text: "Somewhat authentic, some parts hidden", score: 3 },
                    { text: "Often inauthentic, wear a 'work mask'", score: 2 },
                    { text: "Never authentic, feel like I'm playing a role", score: 1 }
                ]
            }
        ];

        // Test State
        let currentQuestion = 0;
        let answers = [];

        // DOM Elements
        const progressBar = document.getElementById('progressBar');
        const progressText = document.getElementById('progressText');
        const categoryBadge = document.getElementById('categoryBadge');
        const questionText = document.getElementById('questionText');
        const optionsContainer = document.getElementById('optionsContainer');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const questionContainer = document.getElementById('questionContainer');
        const resultsContainer = document.getElementById('resultsContainer');
        const emailInput = document.getElementById('emailInput');
        const getReportBtn = document.getElementById('getReportBtn');

        // Initialize Test
        function initTest() {
            showQuestion(0);
        }

        // Show Question
        function showQuestion(index) {
            const question = questions[index];
            
            // Update progress
            const progress = ((index + 1) / questions.length) * 100;
            progressBar.style.width = `${progress}%`;
            progressText.textContent = `${Math.round(progress)}%`;

            // Update question content
            categoryBadge.textContent = question.category;
            categoryBadge.className = `inline-block px-4 py-2 rounded-full text-sm font-medium mb-4 ${getCategoryStyle(question.category)}`;
            questionText.textContent = question.text;

            // Clear and populate options
            optionsContainer.innerHTML = '';
            question.options.forEach((option, optionIndex) => {
                const optionElement = document.createElement('div');
                optionElement.className = `p-4 bg-gray-800 hover:bg-gray-700 rounded-lg cursor-pointer transition-all border-2 border-transparent hover:border-blue-500 ${answers[index] === optionIndex ? 'border-blue-500 bg-gray-700' : ''}`;
                optionElement.innerHTML = `
                    <div class="flex items-center">
                        <input type="radio" name="question${index}" value="${optionIndex}" class="mr-3 w-4 h-4 text-blue-600" ${answers[index] === optionIndex ? 'checked' : ''}>
                        <span>${option.text}</span>
                    </div>
                `;
                
                optionElement.addEventListener('click', () => selectOption(index, optionIndex));
                optionsContainer.appendChild(optionElement);
            });

            // Update navigation buttons
            prevBtn.disabled = index === 0;
            nextBtn.disabled = answers[index] === undefined;
            nextBtn.textContent = index === questions.length - 1 ? 'View Results' : 'Next Question';
        }

        // Select Option
        function selectOption(questionIndex, optionIndex) {
            answers[questionIndex] = optionIndex;
            showQuestion(questionIndex);
        }

        // Category Styles
        function getCategoryStyle(category) {
            if (category.includes('HARDWARE')) return 'bg-red-500/20 text-red-400';
            if (category.includes('SOFTWARE')) return 'bg-blue-500/20 text-blue-400';
            if (category.includes('NETWORK')) return 'bg-green-500/20 text-green-400';
            if (category.includes('SOURCE')) return 'bg-purple-500/20 text-purple-400';
            return 'bg-gray-500/20 text-gray-400';
        }

        // Navigation
        prevBtn.addEventListener('click', () => {
            if (currentQuestion > 0) {
                currentQuestion--;
                showQuestion(currentQuestion);
            }
        });

        nextBtn.addEventListener('click', () => {
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
                showQuestion(currentQuestion);
            } else {
                showResults();
            }
        });

        // Show Results
        function showResults() {
            questionContainer.classList.add('hidden');
            resultsContainer.classList.remove('hidden');

            // Calculate scores
            const scores = {
                hardware: { total: 0, count: 0, name: 'HARDWARE (Body)' },
                software: { total: 0, count: 0, name: 'SOFTWARE (Mind)' },
                network: { total: 0, count: 0, name: 'NETWORK (Feelings)' },
                sourceCode: { total: 0, count: 0, name: 'SOURCE CODE (Spirit)' }
            };

            questions.forEach((question, index) => {
                const answerIndex = answers[index];
                const score = question.options[answerIndex].score;
                
                if (question.category.includes('HARDWARE')) {
                    scores.hardware.total += score;
                    scores.hardware.count++;
                } else if (question.category.includes('SOFTWARE')) {
                    scores.software.total += score;
                    scores.software.count++;
                } else if (question.category.includes('NETWORK')) {
                    scores.network.total += score;
                    scores.network.count++;
                } else if (question.category.includes('SOURCE')) {
                    scores.sourceCode.total += score;
                    scores.sourceCode.count++;
                }
            });

            // Calculate averages
            Object.keys(scores).forEach(key => {
                scores[key].average = (scores[key].total / scores[key].count).toFixed(1);
                scores[key].percentage = (scores[key].average / 5 * 100).toFixed(0);
            });

            // Display scores
            const systemScores = document.getElementById('systemScores');
            systemScores.innerHTML = '';

            Object.entries(scores).forEach(([key, data]) => {
                const scoreCard = document.createElement('div');
                const color = getScoreColor(data.average);
                scoreCard.className = 'bg-gray-800/50 rounded-xl p-6';
                scoreCard.innerHTML = `
                    <div class="flex items-center justify-between mb-4">
                        <h4 class="font-semibold ${color.text}">${data.name}</h4>
                        <span class="text-2xl font-bold ${color.text}">${data.average}/5</span>
                    </div>
                    <div class="w-full bg-gray-700 rounded-full h-2 mb-2">
                        <div class="${color.bg} h-2 rounded-full" style="width: ${data.percentage}%"></div>
                    </div>
                    <p class="text-sm text-gray-400">${getScoreDescription(data.average)}</p>
                `;
                systemScores.appendChild(scoreCard);
            });

            // Find priority areas (lowest scores)
            const priorityAreas = document.getElementById('priorityAreas');
            const sortedScores = Object.entries(scores).sort((a, b) => a[1].average - b[1].average);
            
            priorityAreas.innerHTML = '';
            sortedScores.slice(0, 2).forEach(([key, data]) => {
                const priorityItem = document.createElement('div');
                priorityItem.className = 'flex items-center space-x-3';
                priorityItem.innerHTML = `
                    <span class="text-red-400">‚ö†Ô∏è</span>
                    <span>${data.name}: ${data.average}/5 - ${getScoreDescription(data.average)}</span>
                `;
                priorityAreas.appendChild(priorityItem);
            });
        }

        // Get Score Color
        function getScoreColor(score) {
            if (score >= 4) return { bg: 'bg-green-500', text: 'text-green-400' };
            if (score >= 3) return { bg: 'bg-yellow-500', text: 'text-yellow-400' };
            if (score >= 2) return { bg: 'bg-orange-500', text: 'text-orange-400' };
            return { bg: 'bg-red-500', text: 'text-red-400' };
        }

        // Get Score Description
        function getScoreDescription(score) {
            if (score >= 4.5) return 'Excellent - System running optimally';
            if (score >= 4) return 'Good - Minor optimizations needed';
            if (score >= 3) return 'Fair - Some debugging required';
            if (score >= 2) return 'Poor - Significant issues detected';
            return 'Critical - Immediate system restore needed';
        }

        // Email Report Handler
        getReportBtn.addEventListener('click', () => {
            const email = emailInput.value.trim();
            if (!email || !email.includes('@')) {
                alert('Please enter a valid email address');
                return;
            }

            // Simulate email collection (in real implementation, send to your backend)
            getReportBtn.textContent = 'Sending...';
            getReportBtn.disabled = true;

            setTimeout(() => {
                alert('‚úÖ Report sent! Check your email for your detailed debugging guide.\n\nYou\'ve also been subscribed to our weekly optimization tips!');
                getReportBtn.textContent = 'Report Sent ‚úì';
                getReportBtn.className = 'px-6 py-3 bg-green-600 rounded-lg font-semibold';
            }, 2000);

            // In a real implementation, you would send this data to your backend:
            const userData = {
                email: email,
                testResults: answers,
                timestamp: new Date().toISOString()
            };
            console.log('User data to send to backend:', userData);
        });

        // Initialize the test
        initTest();
    </script>
</body>
</html>
